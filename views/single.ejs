<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <nav>
        <ul>
            <li><a href="/">All Contacts</a></li>
            <li><a href="/new">New Contact</a></li>
        </ul>
    </nav>

    <div id="single">
        <div class="flex">
            <a id="toggle" href="">Edit</a>
            <a href="/single/<%= contact._id %>/delete">Delete</a>
        </div>
        <div id="show">
            <img src="<%= contact.imgURL %> " alt="">
            <h3><%= contact.name %> </h3>
            <h3><%= contact.email %></h3>
            <h3><%= contact.phone %></h3>
        </div>
        <div id="edit">
            <form action="/single/<%= contact._id %>/edit" method="POST">
                <input type="text" name="name" id="" value="<%= contact.name %>">
                <input type="text" name="email" id="" value="<%= contact.email %>">
                <input type="text" name="phone" id="" value="<%= contact.phone %>">
                <input type="text" name="url" id="" value="<%= contact.url %>">
                <input type="submit" value="Edit CONTACT">
            </form>
        </div>
    </div>
    <script>
        const edit = document.getElementById('edit')
        const show = document.getElementById('show')
        const toggleBtn = document.getElementById('toggle')

        edit.classList.add('hide')
        toggleBtn.addEventListener('click', (e) => {
            e.preventDefault()
            edit.classList.toggle('hide')
            show.classList.toggle('hide')
        })
    </script>

</body>

</html>